<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-sign-in-alt"></i><a href="/users/login">Login</a></h1>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group mt-1">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group mt-1">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-1" >Login</button>
      </form>
      <p class="lead mt-4">
        Need to create an account? <a href="/users/register"><p style="font-size: 1.5em;">Register</p></a>
      </p>
    </div>
  </div>
</div>

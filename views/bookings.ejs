<% include ./partials/header %>
<script>var bookings_data = {}; </script>

  <div class="card d-flex flex-column align-items-center text-center" style="margin-top: 25vh;">
    <form action="/users/checkbookings" method="post" id="myFormBookings">
      <div class="dropdown">
        <select name="city" id="city" class="m-1 fs-3" style="padding: 18px">
          <!-- <option disabled selected value> -- select city -- </option> -->
          <option value="london">London</option>
          <option value="gloucester">Gloucester</option>
          <option value="birmingham">Birmingham</option>
          <option value="manchester">Manchester</option>
        </select>
        <input type="date" name="date" id="date" class="m-1 fs-3" style="padding: 11px" onchange="this.form.submit()">
        <!-- <script>
          var todaysDate = new Date().toISOString().slice(0, 10);
          document.getElementById('date').value = todaysDate;
        </script> -->
        <!-- <button type="submit" id="xxx" class="m-1 px-4 py-1 fs-2">Search</button> -->
      </div>
    </form>
    
  
  <div class="table-responsive-xxl fs-4 m-auto text-center">
    <table class="dataTableDB table align-items-center" id="bookingsTable" style="display: none;">
      <tr class="dataTableDBth">
        <td>Customer</td>
        <td>Location</td>
        <td>Check in/out</td>
        <td>Room type</td>
        <td>extras</td>
        <td>to pay</td>
      </tr>
      <% var counter=1;%>
      <% bookings_data.forEach(function(data) { %>

        <% if(counter <= 1) { %> <h1 id="messageLocation" style="text-transform: uppercase"> <%= bookings_data[0]['hotel']; %> </h1><% }     %> 
        <div class="d-flex flex-row gap-1 justify-content-center">
          <% if(counter <= 1) { %> <h1 id="messageLocation"> <button type="button" id="yesterday"> ◀ </button> </h1><% }     %> 
          <% if(counter <= 1) { %> <h1 id="SelectedDate"> <%= bookings_data[0]['date'].slice(0, 10); %> </h1><% }     %> 
          <% if(counter <= 1) { %> <h1 id="messageLocation"> <button type="button" id="tomorrow"> ▶ </button> </h1><% }     %> 
          <script>
            document.getElementById('city').value = "<%= bookings_data[0]['hotel']; %>"
          </script>
        </div>

        <% if(data.found_data == false) {%>
          </table>
          <h1 class="text-center"> no data found </h1>
          <% } else {%>
            <script>document.getElementById('bookingsTable').style.display="flex" </script>
            <tr>
          <td><div id="name<%=counter%>" class="name<%=counter%>"><%= data.customer %></div><div id="email<%=counter%>" class="email<%=counter%>"><%= data.customerEmail %></div></td>
          <td><div id="hotel<%=counter%>" class="location<%=counter%>"><%= data.hotel.toUpperCase() %></div></td>
          <td><div id="checkin<%=counter%>" class="checkin<%=counter%>"><%= data.fromDate %></div>/<div  id="checkout<%=counter%>" class="checkout<%=counter%>"><%= data.toDate %></div></td>
          <td><div id="roomtype<%=counter%>" class="roomtype<%=counter%>"><%= data.roomType %></div></td>
          <td><div id="breakfast<%=counter%>" class="breakfast<%=counter%>"><%= data.extras.breakfast %></div><div id="champagne<%=counter%>" class="champagne<%=counter%>"><%= data.extras.champagne %></div><div id="car<%=counter%>" class="car<%=counter%>"><%= data.extras.car %></div></td>
          <td>£<div id="total<%=counter%>" class="total<%=counter%>"><%= data.total %></div></td>
          <td><i class="fa fa-edit" style="cursor: pointer;" onclick="editMessage('<%=counter%>');"></i></td>
        </tr>
        <% 
        }  counter+=1; })%>
    </table>

  </div>
</div>
